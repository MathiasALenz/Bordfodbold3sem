@model TSolution_Bordfodbold.Entities.Spiller

@{
    Layout = null;
}

<div class="panel">
    <div class="panel-heading">
        <h3> Log ind</h3>
    </div>
    <div class="panel-body">
        <p class="lead">
            Log ind
        </p>
        @using (Html.BeginForm()) {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>User Name:</label>
                @Html.TextBoxFor(m => m.Brugernavn, new {
                    @class = "formcontrol"
                })
            </div>
            <div class="form-group">
                <label>Password:</label>
                @Html.PasswordFor(m => m.Kodeord, new {
                    @class = "formcontrol"
                })
            </div>
            <input type="submit" value="Log ind" class="btn btn-primary" />
        }
    </div>
</div>