@model TSolution_Bordfodbold.Entities.Kamp

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <meta name="viewport" content="width=device-width" />
    <title>Resultat</title>
    <script type="text/javascript">
        function onLoad() {
            document.getElementById("spiller1navn").value = @Model.Spiller1;
            document.getElementById("spiller2navn").value = @Model.Spiller2;
            document.getElementById("spiller3navn").value = @Model.Spiller3;
            document.getElementById("spiller4navn").value = @Model.Spiller4;
            document.getElementById("hold1maal").value = @Model.Hold1_Maal;
            document.getElementById("hold2maal").value = @Model.Hold2_Maal;
            document.getElementById("datotid").value = @Model.DatoTid;
        }
    </script>
</head>
<body onload="onLoad()">

    <div>
        @using (Html.BeginForm("AfslutKamp", "Kamp"))
        {

            <table align="center">
                <tr>
                    <th style="text-align:center" align="center">Hold 1</th>
                    <th style="text-align:center" align="center">Dato</th>
                    <th style="text-align:center" align="center">Hold 2</th>
                </tr>
                <tr>
                    <td align="center">@Html.TextBoxFor(n => n.Spiller1, new { @id = "spiller1navn", @class = "TextBoxAsLabel", @readonly = "readonly", style = "text-align:center"})</td>
                    <td align="center">
                    @Html.TextBoxFor(n => n.DatoTid, new { @id = "datotid", @class = "TextBoxAsLabel", @readonly = "readonly", style = "text-align:center" })
                    </td>
                    <td align="center">@Html.TextBoxFor(n => n.Spiller3, new { @id = "spiller3navn", @class = "TextBoxAsLabel", @readonly = "readonly", style = "text-align:center" })</td>
                </tr>
                <tr>
                    <td align="center">@Html.TextBoxFor(n => n.Spiller2, new { @id = "spiller2navn", @class = "TextBoxAsLabel", @readonly = "readonly", style = "text-align:center" })</td>
                    <td></td>
                    <td align="center">@Html.TextBoxFor(n => n.Spiller4, new { @id = "spiller4navn", @class = "TextBoxAsLabel", @readonly = "readonly", style = "text-align:center" })</td>
                </tr>
                <tr>
                    <td align="center">@Html.TextBoxFor(n => n.Hold1_Maal, new { @id = "hold1maal", @class = "TextBoxAsLabel", @readonly = "readonly", style = "text-align:center" })</td>
                    <td align="center"><strong style="text-align:center">-</strong></td>
                    <td align="center">@Html.TextBoxFor(n => n.Hold2_Maal, new { @id = "hold2maal", @class = "TextBoxAsLabel", @readonly = "readonly", style = "text-align:center" })</td>
                </tr>
                <tr>
                    <td></td>
                    <td align="center"><input type="submit" value="Afslut" class="btn btn-success"/></td>
                    <td></td>
                </tr>
            </table>

        }
    </div>



</body>
</html>
